---
import { SITE } from '@/config';
---

<div class="bg-black text-[#e8e2d1] py-2 overflow-hidden whitespace-nowrap">
  <div class="animate-marquee flex">
    {SITE.spotrun.map(text => (
      <span class="text-2xl font-bold uppercase mx-8">{text}</span>
    ))}
    {SITE.spotrun.map(text => (
      <span class="text-2xl font-bold uppercase mx-8" aria-hidden="true">{text}</span>
    ))}
  </div>
</div>

<style>
  @keyframes marquee {
    from { transform: translateX(0); }
    to { transform: translateX(-50%); }
  }
  .animate-marquee {
    animation: marquee 30s linear infinite;
  }
</style>